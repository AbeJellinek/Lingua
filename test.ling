class Triangle {
    side1
    side2
    side3

    init(side1: Number, side2: Number, side3: Number) = {
        self.side1 = side1
        self.side2 = side2
        self.side3 = side3
    }

    area() = {
        p = self.perimeter() / 2
        sqrt(p(p - self.side1)(p - self.side2)(p - self.side3)) // This is the formula for the area of a triangle.
    }

    perimeter() = self.side1 + self.side2 + self.side3
}

lenString = read("Side lengths (comma-separated): ")
if (lenString != null) {
    lengths = lenString.split(",").map(x -> Number(x.trim()))

    if (lengths.size() != 3) {
        error("Invalid number of sides.")
    } else {
        tri = Triangle(lengths[0], lengths[1], lengths[2])
        print("Area: " + tri.area())
        print("Perimeter: " + tri.perimeter())
    }
}

